<% layout('layouts/boilerplate') %>
<div id="wrapper">
  <!-- Topbar Start -->
  <div class="navbar-custom bg-light">
    <div class="container-fluid">
      <ul class="list-unstyled topnav-menu float-end mb-0">
        <li class="dropdown notification-list topbar-dropdown">
          <a
            class="nav-link dropdown-toggle nav-user me-0 waves-effect waves-light"
            data-bs-toggle="dropdown"
            href="#"
            role="button"
            aria-haspopup="false"
            aria-expanded="false"
          >
            <img
              src="/images/users/user.png"
              alt="user-image"
              class="rounded-circle"
            />
            <span class="pro-user-name ms-1 text-dark">
              Admin <i class="mdi mdi-chevron-down"></i>
            </span>
          </a>
          <div class="dropdown-menu dropdown-menu-end profile-dropdown">
            <!-- item-->
            <div class="dropdown-header noti-title">
              <h6 class="text-overflow m-0">Welcome !</h6>
            </div>

            <!-- item-->
            <a href="/admin/kasir" class="dropdown-item notify-item">
              <i class="fe-user"></i>
              <span>Tambah Akun Admin & Kasir</span>
            </a>
            <div class="dropdown-divider"></div>

            <!-- item-->
            <a href="" class="dropdown-item notify-item">
              <i class="fe-log-out"></i>
              <span>Logout</span>
            </a>
          </div>
        </li>
      </ul>

      <!-- LOGO -->
      <div class="logo-box">
        <a href="index.html" class="logo logo-light text-center">
          <span class="logo-sm">
            <img
              src="/images/Toko/kue_logo.png"
              alt=""
              width="20"
              height="20"
            />
          </span>
          <span class="logo-lg">
            <img
              src="/images/Toko/kue_logo.png"
              alt=""
              width="30"
              height="30"
            />
            <span class="logos">SmartBakery</span>
          </span>
        </a>
      </div>

      <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
        <li>
          <button class="button-menu-mobile waves-effect waves-light">
            <i class="fe-menu" style="color: #000"></i>
          </button>
        </li>

        <li>
          <!-- Mobile menu toggle (Horizontal Layout)-->
          <a
            class="navbar-toggle nav-link"
            data-bs-toggle="collapse"
            data-bs-target="#topnav-menu-content"
          >
            <div class="lines text-dark">
              <span>Admin AR (Roti)</span> / <span>Produk saya</span> /
              <span style="color: orange; font-size: 15px"> <%= nav %> </span>
            </div>
          </a>
          <!-- End mobile menu toggle-->
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
  </div>
  <!-- end Topbar -->

  <!-- ========== Left Sidebar Start ========== -->
  <div class="left-side-menu">
    <div class="h-100" data-simplebar>
      <!--- Sidemenu -->
      <div id="sidebar-menu">
        <ul id="side-menu">
          <li style="border-bottom: 1px solid #000; padding-left: 5px">
            <a href="/admin/produk">
              <i class="fas fa-arrow-left"></i>
              <span class="mx-1">Back</span>
            </a>
          </li>

          <li class="py-4">
            <a href="#sidebarDashboards" data-bs-toggle="collapse">
              <i data-feather="airplay"></i>
              <span class="menu-arrow"></span>
              <span> <%= nav %> </span>
            </a>
            <div class="collapse" id="sidebarDashboards">
              <ul class="nav-second-level">
                <li>
                  <a href="#Informasi">Informasi produk</a>
                </li>
                <li>
                  <a href="#rincian">Rincian Bahan Produk</a>
                </li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
      <!-- End Sidebar -->
    </div>
    <!-- Sidebar -left -->
  </div>
  <!-- Left Sidebar End -->

  <!-- ============================================================== -->
  <!-- Start Page Content here -->
  <!-- ============================================================== -->

  <div class="content-page">
    <div class="content">
      <!-- Start Content-->
      <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
          <div class="col-12">
            <div class="page-title-box">
              <div class="page-title-right">
                <ol class="breadcrumb m-0">
                  <li class="breadcrumb-item">
                    <a href="index.html"> <%= subnav[0] %> </a>
                  </li>
                  <li class="breadcrumb-item disabled">
                    <a href="#"> <%= subnav[1] %> </a>
                  </li>
                </ol>
              </div>
            </div>
          </div>
          <!-- Begin page -->
          <!-- Form row -->
          <div class="row mt-3">
            <div class="col-12">
              <div class="card">
                <div class="card-body" id="Informasi">
                  <h4 class="header-title">Tambah Produk | Informasi Produk</h4>

                  <form
                    action="/admin/produk/new"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                    <ul>
                      <div class="mt-4 mb-3 mt-3 row">
                        <li>
                          <div class="text">
                            <label for="text" class="col-sm-2 col-form-label"
                              >Nama Produk</label
                            >
                          </div>
                          <div class="col-sm-10">
                            <input
                              name="produk[namaProduk]"
                              required
                              type="text"
                              class="form-control"
                              id="floatingInput"
                              placeholder="masukan nama Produk"
                              style="margin-left: 22vh; margin-top: -5vh"
                            />
                          </div>
                        </li>
                      </div>

                      <div class="mt-4 mb-3 row">
                        <li>
                          <label
                            for="exampleFormControlTextarea1"
                            class="col-sm-2 col-form-label"
                            >Deskripsi Produk</label
                          >
                          <div class="col-sm-10">
                            <textarea
                              name="produk[deskripsi]"
                              required
                              class="form-control"
                              placeholder="masukan deskripsi produk"
                              id="floatingTextarea2"
                              style="
                                height: 100px;
                                margin-left: 22vh;
                                margin-top: -5vh;
                              "
                            ></textarea>
                          </div>
                        </li>
                      </div>
                      <div class="mt-4 mb-3 row">
                        <li>
                          <label for="text" class="col-sm-2 col-form-label"
                            >Jenis Pemasanan</label
                          >
                          <div class="col-sm-10" style="margin-top: -30px">
                            <div
                              class="form-check form-check-inline"
                              style="margin-left: 22vh"
                            >
                              <input
                                class="form-check-input"
                                type="radio"
                                name="produk[jenisPemesanan]"
                                required
                                id="inlineRadio1"
                                value="Pre-Order"
                              />
                              <label class="form-check-label" for="inlineRadio1"
                                >Pre Order</label
                              >
                            </div>
                            <div class="form-check form-check-inline">
                              <input
                                class="form-check-input"
                                type="radio"
                                name="produk[jenisPemesanan]"
                                required
                                id="inlineRadio2"
                                value="Ready"
                              />
                              <label class="form-check-label" for="inlineRadio2"
                                >Ready</label
                              >
                            </div>
                          </div>
                        </li>
                      </div>
                      <div class="mt-4 mb-3 row">
                        <li>
                          <label for="text" class="col-sm-2 col-form-label"
                            >Kategori</label
                          >
                          <div class="col-sm-10" style="margin-top: -30px">
                            <div
                              class="form-check form-check-inline"
                              style="margin-left: 22vh"
                            >
                              <input
                                type="radio"
                                name="produk[kategori]"
                                required
                                id="rotiM"
                                value="Roti"
                                required=""
                                class="form-check-input"
                              />
                              <label for="rotiM">Roti</label>
                            </div>
                            <div
                              class="form-check form-check-inline"
                              style="margin-left: 5vh"
                            >
                              <input
                                type="radio"
                                name="produk[kategori]"
                                required
                                id="jajanF"
                                value="Snack"
                                class="form-check-input"
                              />
                              <label for="jajanF">Jajanan</label>
                            </div>
                            <div
                              class="form-check form-check-inline"
                              style="margin-left: 5vh"
                            >
                              <input
                                type="radio"
                                name="produk[kategori]"
                                required
                                id="nasiA"
                                value="Nasi"
                                class="form-check-input"
                              />
                              <label for="nasiA">Nasi</label>
                            </div>
                          </div>
                        </li>
                      </div>
                      <div class="mt-4 mb-3 row">
                        <li>
                          <div class="text">
                            <label for="text" class="col-sm-2 col-form-label"
                              >Bobot Produk</label
                            >
                          </div>
                          <div class="col-sm-1">
                            <input
                              name="produk[bobotTenaga]"
                              required
                              type="text"
                              class="form-control"
                              id="floatingInput"
                              placeholder="27"
                              style="margin-left: 22vh; margin-top: -5vh"
                            />
                          </div>
                        </li>
                      </div>
                      <div class="mt-4 mb-3 row">
                        <li>
                          <div class="text">
                            <label for="text" class="col-sm-2 col-form-label"
                              >Foto Produk</label
                            >
                          </div>
                          <div class="col-sm-6">
                            <div
                              class="input-group"
                              style="margin-left: 22vh; margin-top: -5vh"
                            >
                              <input
                                type="file"
                                class="form-control"
                                id="image"
                                aria-describedby="inputGroupFileAddon04"
                                name="gambar"
                                multiple
                                aria-label="Upload"
                              />
                              <span class="input-group-text">
                                <i class="fas fa-camera"></i>
                              </span>
                            </div>
                            <span class="dimensi"
                              >Remokendasi Dimensi Adalah 1920px X 700px Dengan
                              Format .jpg , .Png</span
                            >
                          </div>
                        </li>
                      </div>
                      <div class="mt-4 row">
                        <div class="row">
                          <div class="col-xl-3">
                            <li>
                              <div>
                                <label for="text" class="form-label"
                                  >Harga Produk</label
                                >
                                <input
                                  name="produk[hargaProduk]"
                                  required
                                  class="form-control"
                                  type="text"
                                  id="text"
                                  style="margin-left: 22vh; margin-top: -5vh"
                                />
                              </div>
                            </li>
                          </div>
                          <div class="col-xl-3" style="margin-left: 24vh">
                            <li>
                              <div>
                                <label for="text" class="form-label"
                                  >Stok</label
                                >
                                <input
                                  name="produk[stok]"
                                  required
                                  class="form-control"
                                  type="text"
                                  id="text"
                                  style="margin-left: 8vh; margin-top: -5vh"
                                />
                              </div>
                            </li>
                          </div>
                        </div>
                        <button class="btn btn-primary mt-4">Submit</button>
                      </div>
                    </ul>
                  </form>
                </div>
                <!-- end card-body -->
              </div>
              <!-- end card-->
            </div>
            <!-- end col -->
          </div>
          <!-- end row -->
        </div>
      </div>
    </div>
  </div>
</div>
